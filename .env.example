# Chave de API do DeepSeek (obrigatório)
DEEPSEEK_API_KEY=sua_chave_aqui

# Configurações da API
API_KEY=40028922  # Chave para autenticar requisições à API
MIN_TEXT_LENGTH=50  # Tamanho mínimo do texto para análise
MAX_TEXT_LENGTH=5000  # Tamanho máximo do texto para análise
RATE_LIMIT_PER_MINUTE=60  # Limite de requisições por minuto por API key
MAX_CACHE_ITEMS=1000  # Número máximo de itens no cache

# Configurações do servidor
HOST=0.0.0.0
PORT=8000
RELOAD=true  # Ativar auto-reload em desenvolvimento
LOG_LEVEL=INFO

# Configurações de logging
LOG_FILE=api.log  # Nome do arquivo de log
MAX_LOG_SIZE=10485760  # Tamanho máximo do arquivo de log (10MB)
BACKUP_COUNT=5  # Número de arquivos de backup do log 